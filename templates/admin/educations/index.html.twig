{% extends 'admin.html.twig' %}

{% block title %}Formations | Administration{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Formations <div class="float-right"><a href="{{ path('admin_educations_new') }}" class="btn btn-primary btn-sm">Ajouter</a></div></h5>
            <div class="card-body p-0">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Titre</th>
                            <th>Ecole</th>
                            <th>PÃ©riode</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in rows %}
                            <tr>
                                <td>{{ row.id }}</td>
                                <td>{{ row.degree }}</td>
                                <td>{{ row.school }}</td>
                                <td>{{ row.startAt | format_datetime(pattern="MMMM Y", locale="fr_FR") | capitalize }} - {{ row.endAt | format_datetime(pattern="MMMM Y", locale="fr_FR") | capitalize }}</td>
                                <td>
                                    <a href="{{ path('admin_educations_edit', {id: row.id}) }}" class="btn btn-warning btn-sm"><i class="fas fa-pen"></i></a>
                                    <form style=" display: inline-block;" action="{{ path('admin_educations_edit', {id: row.id}) }}" method="post" onsubmit="return confirm('Voulez vous vraiment supprimer ce contenu')">
                                        <input type="hidden" name="_method" value="DELETE" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
